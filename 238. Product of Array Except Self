class Solution {
public:
    vector<int> productExceptSelf(vector<int>& nums) {
       int prod=1;
        int zeroc=0;
        for(int& i:nums){
            
            if (i != 0)
                prod*=i;
            else
                zeroc++;
            /*if (zeroc > 1){
                vector<int> ans(nums.size(),0);
                cout<<ans[1];
                return ans;
            }*/
        } 
        //cout<<prod<<" "<<zeroc;
        for(int& i:nums){
            if(i == 0 && zeroc == 1)
                i = prod;
            else if(zeroc > 1 )
                i=0;
            else if(zeroc ==1)
                i=0;
            else
                i = prod/i;
        } 
        return nums;
    }
};
